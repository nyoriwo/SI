#Area per lipid
cpptraj <<EOF
parm ../dib_proto_mem.prmtop
trajin  all_Prod_dib_proto_mem_50ns_skip_${i}_center.mdcrd
areapermol top :2-313 nlayers 1 out apm_top_mem_dib_${i}.dat
run
exit
EOF

#angle 
cpptraj
parm dib_proto_mem.prmtop
trajin all_Prod_dib_proto_mem_50ns_skip_0_15_last20_center.mdcrd
vector dib_vec :UNL@N :UNL@O
vector mem corrplane :ST
vectormath vec1 dib_vec vec2 mem out dib_proto_angle_0_15_z2.dat name AngleA dotangle
run
exit

